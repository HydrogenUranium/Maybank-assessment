<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0"
          xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="Properties"
          sling:resourceType="cq/gui/components/authoring/dialog" xmlns:granite="http://www.adobe.com/jcr/granite/1.0">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
        <items jcr:primaryType="nt:unstructured">
            <column
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <type
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/select"
                            fieldLabel="Type"
                            granite:class="cq-dialog-dropdown-multiple-showhide"
                            name="./type">
                        <granite:data
                                jcr:primaryType="nt:unstructured"
                                cq-dialog-dropdown-showhide-target=".carousel-options-showhide"/>
                        <items
                                jcr:primaryType="nt:unstructured">
                            <cosmetics
                                    jcr:primaryType="nt:unstructured"
                                    text="Localization and authenticity"
                                    value="localization-and-authenticity"/>
                            <consumerElectronics
                                    jcr:primaryType="nt:unstructured"
                                    text="More than just Apple Watch"
                                    value="more-than-apple-watch"/>
                        </items>
                    </type>

                    <title
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldLabel="Title"
                        name="./title"/>
                    <firstDescriptionPart
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="cq/gui/components/authoring/dialog/richtext"
                        useFixedInlineToolbar="{Boolean}true"
                        fieldLabel="First Description Part"
                        name="./firstDescriptionPart"/>
                    <previousTitle
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                            fieldLabel="'Previous' Title"
                            name="./previousTitle"/>
                    <nextTitle
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                            fieldLabel="'Next' Title"
                            name="./nextTitle"/>
                    <secondDescriptionPart
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="cq/gui/components/authoring/dialog/richtext"
                            useFixedInlineToolbar="{Boolean}true"
                            fieldLabel="Second Description Part"
                            name="./secondDescriptionPart"/>
                    <firstItemTitle
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                            fieldLabel="First Item Title"
                            name="./firstItemTitle"/>
                    <secondItemTitle
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                            fieldLabel="Second Title"
                            name="./secondItemTitle"/>
                    <thirdItemTitle
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                            fieldLabel="Third Title"
                            name="./thirdItemTitle"/>
                    <localizationImgAltOptions
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/container"
                            granite:class="carousel-options-showhide">
                            <granite:data
                                jcr:primaryType="nt:unstructured"
                                showhidetargetvalue="localization-and-authenticity"/>
                            <items jcr:primaryType="nt:unstructured">
                                <imgAltText1
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldLabel="Alt Text for Vodka Berlin"
                                        name="./imgAltText1"
                                        fieldDescription="Set carousel image alt text for SEO"
                                        emptyText="Carousel Image Alt Text Placeholder">
                                </imgAltText1>
                                <imgAltText2
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldLabel="Alt Text for Vodka Korea"
                                        name="./imgAltText2"
                                        fieldDescription="Set carousel image alt text for SEO"
                                        emptyText="Carousel Image Alt Text Placeholder">
                                </imgAltText2>
                                <imgAltText3
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldLabel="Alt Text for Vodka BuenosAires"
                                        name="./imgAltText3"
                                        fieldDescription="Set carousel image alt text for SEO"
                                        emptyText="Carousel Image Alt Text Placeholder">
                                </imgAltText3>
                            </items>
                    </localizationImgAltOptions>
                    <appleWatchImgAltOptions
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/container"
                            granite:class="carousel-options-showhide">
                        <granite:data
                                jcr:primaryType="nt:unstructured"
                                showhidetargetvalue="more-than-apple-watch"/>
                        <items jcr:primaryType="nt:unstructured">
                            <imgAltText4
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldLabel="Alt Text for Black Watch"
                                    name="./imgAltText4"
                                    fieldDescription="Set carousel image alt text for SEO"
                                    emptyText="Carousel Image Alt Text Placeholder">
                            </imgAltText4>
                            <imgAltText5
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldLabel="Alt Text for Black Color Strap"
                                    name="./imgAltText5"
                                    fieldDescription="Set carousel image alt text for SEO"
                                    emptyText="Carousel Image Alt Text Placeholder">
                            </imgAltText5>
                            <imgAltText6
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldLabel="Alt Text for Pink Color Strap"
                                    name="./imgAltText6"
                                    fieldDescription="Set carousel image alt text for SEO"
                                    emptyText="Carousel Image Alt Text Placeholder">
                            </imgAltText6>
                        </items>
                    </appleWatchImgAltOptions>
                </items>
            </column>
        </items>
    </content>
</jcr:root>
