<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0"
          xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="nt:unstructured" xmlns:granite="http://www.adobe.com/jcr/granite/1.0">
    <content jcr:primaryType="nt:unstructured">
        <items jcr:primaryType="nt:unstructured">
            <tabs jcr:primaryType="nt:unstructured">
                <items jcr:primaryType="nt:unstructured" sling:hideChildren="permissions">
                    <basic
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/include"
                            path="/mnt/override/apps/dhl/components/pages/master/tabs/basic"/>
                    <advanced
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/include"
                            path="/mnt/override/apps/dhl/components/pages/master/tabs/advanced"/>
                    <!-- DIS-909 - below section included to override default behavior of featured image upload from desktop-->
                    <thumbnail jcr:primaryType="nt:unstructured">
                        <items jcr:primaryType="nt:unstructured">
                            <column jcr:primaryType="nt:unstructured">
                                <items jcr:primaryType="nt:unstructured">
                                    <featuredimage jcr:primaryType="nt:unstructured">
                                        <items jcr:primaryType="nt:unstructured">
                                            <file jcr:primaryType="nt:unstructured"
                                                  allowUpload="{Boolean}false">
                                            </file>
                                        </items>
                                    </featuredimage>
                                    <thumbnail jcr:primaryType="nt:unstructured"
                                               granite:class="discover-thumbnail">
                                        <items jcr:primaryType="nt:unstructured">
                                            <fileReference
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/hidden"
                                                    granite:class="discover-thumbnail-file-reference"
                                                    fieldLabel="Title"
                                                    disabled="{Boolean}true"
                                                    name="./image/fileReference"/>
                                        </items>
                                    </thumbnail>
                                </items>
                            </column>
                        </items>
                    </thumbnail>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
