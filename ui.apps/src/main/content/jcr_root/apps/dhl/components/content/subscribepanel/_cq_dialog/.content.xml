<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
          xmlns:cq="http://www.day.com/jcr/cq/1.0"
          xmlns:jcr="http://www.jcp.org/jcr/1.0"
          xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="Subscribe panel properties"
          sling:resourceType="cq/gui/components/authoring/dialog">
    <content
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/container">
        <layout
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/foundation/layouts/tabs"
                type="nav" />
        <items jcr:primaryType="nt:unstructured">
            <general
                    jcr:primaryType="nt:unstructured"
                    jcr:title="General"
                    sling:resourceType="granite/ui/components/foundation/section">
                <items jcr:primaryType="nt:unstructured">
                    <column
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <title
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/form/textfield"
                                    fieldLabel="Title"
                                    name="./title"/>
                            <brief
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/form/textarea"
                                    fieldLabel="Brief Description - (non-Marketo form only)"
                                    name="./brief"/>
                            <ctatitle
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/form/textfield"
                                    fieldLabel="CTA Title - (non-Marketo form only)"
                                    name="./ctatitle"/>
                        </items>
                    </column>
                </items>
            </general>
            <marketo
                    jcr:primaryType="nt:unstructured"
                    jcr:title="Marketo"
                    sling:resourceType="granite/ui/components/foundation/section">
                <items jcr:primaryType="nt:unstructured">
                    <column
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <marketoformid
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/form/textfield"
                                    fieldLabel="Marketo FormID. If left empty, value 1799 will be used."
                                    name="./marketoFormId"
                                    value="1799"
                                    emptyText="Marketo form ID of the 'hidden' form, such as 1795"
                                    fieldDescription="Form (asset) ID of the form in Marketo"/>
                            <marketomunchkinid
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/form/textfield"
                                    fieldLabel="Marketo Munchkin ID. If left empty, value 903-EZK-832 will be used."
                                    name="./marketoMunchkinId"
                                    value="903-EZK-832"
                                    emptyText="Marketo project ID of the 'hidden' form, such as 903-EZK-832"
                                    fieldDescription="Marketo project (munchkin ID)"/>
                            <hiddenmarketoformid
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/form/textfield"
                                    fieldLabel="HIDDEN Marketo FormID. If left empty, value 1759 will be used."
                                    name="./hiddenMarketoId"
                                    value="1759"
                                    emptyText="Marketo form ID of the 'hidden' form, such as 1759."
                                    fieldDescription="Form (asset) ID of the form in Marketo. Refers to 'hidden' form."/>
                            <marketoHostname
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/form/textfield"
                                    fieldLabel="Marketo Host. Defaults to https://express-resource.dhl.com"
                                    name="./marketoHostname"
                                    value="https://express-resource.dhl.com"
                                    emptyText="Marketo hostname, such as https://express-resource.dhl.com"
                                    fieldDescription="Marketo hostname. Controls where the form submissions are sent."/>
                        </items>
                    </column>
                </items>
            </marketo>
        </items>
    </content>
</jcr:root>
