<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
          xmlns:granite="http://www.adobe.com/jcr/granite/1.0"
          xmlns:cq="http://www.day.com/jcr/cq/1.0"
          xmlns:jcr="http://www.jcp.org/jcr/1.0"
          xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="Footer"
          sling:resourceType="cq/gui/components/authoring/dialog">
    <content
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/tabs"
                    maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <properties
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Properties"
                            sling:resourceType="granite/ui/components/coral/foundation/container"
                            margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <logo
                                    jcr:primaryType="nt:unstructured"
                                    jcr:title="Logo Icon"
                                    sling:resourceType="granite/ui/components/foundation/form/fieldset">
                                <items jcr:primaryType="nt:unstructured">
                                    <logoIcon
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                            name="./logoIcon"
                                            rootPath="/content/dam"
                                            fieldLabel="Logo Icon"
                                            fieldDescription="Path to the 'DHL Group' logo in the AEM DAM">
                                    </logoIcon>
                                    <logoTitle
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            fieldLabel="Logo Title"
                                            name="./logoTitle"
                                            fieldDescription="Set logo image title for SEO"
                                            emptyText="DHL Group">
                                    </logoTitle>
                                    <logoAltText
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            fieldLabel="Logo Alt Text"
                                            name="./logoAltText"
                                            fieldDescription="Set logo image alt text for SEO"
                                            emptyText="DHL Group">
                                    </logoAltText>
                                    <logoLink
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                            fieldLabel="Logo link"
                                            fieldDescription="The logo should lead to the main page of DHL Group"
                                            multiple="false"
                                            name="./logoLink"
                                            rootPath="/content">
                                    </logoLink>
                                </items>
                            </logo>
                            <text
                                    jcr:primaryType="nt:unstructured"
                                    jcr:title="Text fields"
                                    sling:resourceType="granite/ui/components/foundation/form/fieldset">
                                <items jcr:primaryType="nt:unstructured">
                                    <invitation-title
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            fieldLabel="Invitation Title"
                                            fieldDescription="The Title of the Invitation"
                                            emptyText="Ready to grow your business?"
                                            name="./invitationTitle">
                                    </invitation-title>
                                    <invitation-text
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            fieldLabel="Invitation Text"
                                            fieldDescription="The Text of the Invitation"
                                            emptyText="Join over 5000+ SMEs already growing with Discover?"
                                            name="./invitationText">
                                    </invitation-text>
                                    <promo-text
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                            fieldLabel="Promo Text"
                                            fieldDescription="Text under the Logo"
                                            emptyText="Get tips and advice on delivering exceptional logistics service and expanding your business to global audience."
                                            name="./promoText">
                                    </promo-text>
                                </items>
                            </text>
                            <categoryLinks
                                    jcr:primaryType="nt:unstructured"
                                    jcr:title="Category Links"
                                    sling:resourceType="granite/ui/components/foundation/form/fieldset">
                                <items jcr:primaryType="nt:unstructured">
                                    <categoryLinksLabel
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            fieldLabel="Category Links Label"
                                            fieldDescription="This 'Categories' label will be displayed above the list of all categories"
                                            emptyText="Categories"
                                            name="./categoryLinksLabel">
                                    </categoryLinksLabel>
                                </items>
                            </categoryLinks>
                            <companyLinks
                                    jcr:primaryType="nt:unstructured"
                                    jcr:title="Company Links"
                                    sling:resourceType="granite/ui/components/foundation/form/fieldset">
                                <items jcr:primaryType="nt:unstructured">
                                    <companyLinksLabel
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            fieldLabel="Company Links Label"
                                            fieldDescription="This 'Company' label will be displayed above the list of all links connected to the company"
                                            emptyText="Company"
                                            name="./companyLinksLabel">
                                    </companyLinksLabel>
                                    <companyLinksList
                                            jcr:primaryType="nt:unstructured"
                                            fieldLabel="Company Links List (inheritance cancelled)"
                                            fieldDescription="Add links like 'About us', 'Press', 'Contact'.
                                                                                                      Synchronisation with Blueprint (Master) disabled (inheritance cancelled)"
                                            composite="{Boolean}true"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/multifield">
                                        <field sling:resourceType="granite/ui/components/coral/foundation/container"
                                               jcr:primaryType="nt:unstructured"
                                               name="./companyLinks">
                                            <items jcr:primaryType="nt:unstructured">
                                                <label
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                        fieldLabel="Label"
                                                        name="./linkName"
                                                        required="{Boolean}true"/>
                                                <path
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                        fieldLabel="Path"
                                                        rootPath="/content/dhl"
                                                        name="./linkPath"
                                                        required="{Boolean}true"/>
                                            </items>
                                        </field>
                                    </companyLinksList>
                                </items>
                            </companyLinks>
                            <socialLinks
                                    jcr:primaryType="nt:unstructured"
                                    jcr:title="Social Links"
                                    sling:resourceType="granite/ui/components/foundation/form/fieldset">
                                <items jcr:primaryType="nt:unstructured">
                                    <socialLinksLabel
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            fieldLabel="Social Links Label"
                                            fieldDescription="This 'Social' label will be displayed above the list of all links connected to the social messengers"
                                            emptyText="Social"
                                            name="./socialLinksLabel">
                                    </socialLinksLabel>
                                    <socialLinksList
                                            jcr:primaryType="nt:unstructured"
                                            fieldLabel="Social Network Links List (inheritance cancelled)"
                                            fieldDescription="Add links like 'LinkedIn', 'Instagram', 'Twitter', 'Facebook'.
                                                                                                      Synchronisation with Blueprint (Master) disabled (inheritance cancelled)"
                                            composite="{Boolean}true"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/multifield">
                                        <field sling:resourceType="granite/ui/components/coral/foundation/container"
                                               jcr:primaryType="nt:unstructured"
                                               name="./socialLinks">
                                            <items jcr:primaryType="nt:unstructured">
                                                <linkName
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                        fieldLabel="Label"
                                                        name="./linkName"
                                                        required="{Boolean}true"/>
                                                <linkPath
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                        fieldLabel="Path"
                                                        rootPath="/content/dhl"
                                                        name="./linkPath"
                                                        required="{Boolean}true"/>
                                                <icon
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                        fieldLabel="Icon (for Mobile only) "
                                                        rootPath="/content/dam"
                                                        name="./linkIcon"
                                                        required="{Boolean}true"/>
                                            </items>
                                        </field>
                                    </socialLinksList>
                                </items>
                            </socialLinks>
                        </items>
                    </properties>
                    <accessibility
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Accessibility"
                            sling:resourceType="granite/ui/components/coral/foundation/container"
                            margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <sectionTitle
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldLabel="Section Title for screen readers"
                                    emptyText="Footer"
                                    name="./sectionTitle">
                            </sectionTitle>
                        </items>
                    </accessibility>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
