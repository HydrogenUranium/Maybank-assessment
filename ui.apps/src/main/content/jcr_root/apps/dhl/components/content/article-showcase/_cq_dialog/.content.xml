<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Article Showcase"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
        <items jcr:primaryType="nt:unstructured">
            <column
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <title
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                            fieldLabel="Title"
                            name="./title"/>
                    <verticalOptions
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/container"
                            granite:class="vertical-content-type-showhide">
                        <granite:data
                                jcr:primaryType="nt:unstructured"
                                showhidetargetvalue="vertical"/>
                        <items jcr:primaryType="nt:unstructured">
                            <linkName
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldLabel="Link name (bottom link, for example: See all latest posts)"
                                    name="./linkName"/>
                            <linkPath
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                    fieldLabel="Link path"
                                    rootPath="/content/dhl"
                                    name="./linkPath"/>
                        </items>
                    </verticalOptions>
                    <horizontalOptions
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/container"
                            granite:class="vertical-content-type-showhide">
                        <granite:data
                                jcr:primaryType="nt:unstructured"
                                showhidetargetvalue="horizontal"/>
                        <items jcr:primaryType="nt:unstructured">
                            <showTags
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                    text="Show yellow tags inside article cards"
                                    value="true"
                                    name="./showTags">
                            </showTags>
                        </items>
                    </horizontalOptions>
                    <designMode
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/select"
                            fieldLabel="Design mode (Horizontal or Vertical)"
                            fieldDescription="The component supports two display modes: horizontal and vertical view."
                            granite:class="cq-dialog-dropdown-showhide"
                            name="./designMode">
                        <granite:data
                                jcr:primaryType="nt:unstructured"
                                cq-dialog-dropdown-showhide-target=".vertical-content-type-showhide"/>
                        <items
                                jcr:primaryType="nt:unstructured">
                            <horizontal
                                    jcr:primaryType="nt:unstructured"
                                    text="Horizontal (Article cards with horizontal scrolling)"
                                    value="horizontal"/>
                            <vertical
                                    jcr:primaryType="nt:unstructured"
                                    text="Vertical (Blocks of articles with a link at the bottom)"
                                    value="vertical"/>
                        </items>
                    </designMode>
                    <source
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/select"
                            granite:class="cq-dialog-dropdown-showhide"
                            fieldDescription="Choose the source of articles manual selection or automatic algorithm"
                            fieldLabel="Article Source (Custom Pick or Automatic Algorithm)"
                            name="./source">
                        <granite:data
                                jcr:primaryType="nt:unstructured"
                                cq-dialog-dropdown-showhide-target=".custom-pick-content-type-showhide"/>
                        <items
                                jcr:primaryType="nt:unstructured">
                            <customPick
                                    jcr:primaryType="nt:unstructured"
                                    text="Custom Pick"
                                    value="customPick"/>
                            <latest
                                    jcr:primaryType="nt:unstructured"
                                    text="Latest (Automatic Algorithm)"
                                    value="latest"/>
                            <trending
                                    jcr:primaryType="nt:unstructured"
                                    text="Trending (Automatic Algorithm) Not yet supported"
                                    disabled="true"
                                    value="trending"/>
                        </items>
                    </source>
                    <alert
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="/libs/granite/ui/components/coral/foundation/alert"
                            variant="info"
                            granite:class="vertical-content-type-showhide"
                            text="Only 4 articles will be displayed on desktop view">
                        <granite:data
                                jcr:primaryType="nt:unstructured"
                                showhidetargetvalue="horizontal"/>
                    </alert>
                    <customPickOptions
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/container"
                            granite:class="custom-pick-content-type-showhide">
                        <granite:data
                                jcr:primaryType="nt:unstructured"
                                showhidetargetvalue="customPick"/>
                        <items jcr:primaryType="nt:unstructured">
                            <articles
                                    jcr:primaryType="nt:unstructured"
                                    fieldLabel="Articles"
                                    fieldDescription="Add articles to display."
                                    composite="{Boolean}true"
                                    validation="multifield-quantity"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/multifield">
                                <field sling:resourceType="granite/ui/components/coral/foundation/container"
                                       jcr:primaryType="nt:unstructured"
                                       name="./articles">
                                    <items jcr:primaryType="nt:unstructured">
                                        <articlePath
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                fieldLabel="Article Path"
                                                required="true"
                                                rootPath="/content/dhl"
                                                name="./articlePath"/>
                                    </items>
                                </field>
                            </articles>
                        </items>
                    </customPickOptions>
                </items>
            </column>
        </items>
    </content>
</jcr:root>
