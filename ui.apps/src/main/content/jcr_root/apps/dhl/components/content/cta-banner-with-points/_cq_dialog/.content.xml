<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0"
          xmlns:granite="http://www.adobe.com/jcr/granite/1.0"
          xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="CTA Banner With Points - Properties"
          sling:resourceType="cq/gui/components/authoring/dialog">
    <content
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/tabs"
                    maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <properties
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Properties"
                            sling:resourceType="granite/ui/components/coral/foundation/container"
                            margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <configuration
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/container"
                                    granite:class="cta-banner-type-checkbox-showhide">
                                <granite:data
                                        jcr:primaryType="nt:unstructured"
                                        showhidetargetvalue="custom"/>
                                <items jcr:primaryType="nt:unstructured">
                                    <mobileBackgroundImage
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                            name="./mobileBackgroundImage"
                                            rootPath="/content/dam"
                                            fieldLabel="Mobile Background Image"/>
                                    <tabletBackgroundImage
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                            name="./tabletBackgroundImage"
                                            rootPath="/content/dam"
                                            fieldLabel="Tablet Background Image"/>
                                    <desktopBackgroundImage
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                            name="./desktopBackgroundImage"
                                            rootPath="/content/dam"
                                            fieldLabel="Desktop Background Image"/>
                                    <title
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            fieldLabel="Title"
                                            name="./title"/>
                                    <points
                                            jcr:primaryType="nt:unstructured"
                                            fieldLabel="Points"
                                            composite="{Boolean}true"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/multifield">
                                        <field sling:resourceType="granite/ui/components/coral/foundation/container"
                                               jcr:primaryType="nt:unstructured"
                                               name="./points">
                                            <items jcr:primaryType="nt:unstructured">
                                                <text
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                        fieldLabel="Point"
                                                        required="true"
                                                        name="./text"/>
                                            </items>
                                        </field>
                                    </points>
                                    <buttonName
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            fieldLabel="Button Name"
                                            name="./buttonName"/>
                                    <buttonLink
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                            fieldLabel="Button Link"
                                            rootPath="/content/dhl"
                                            name="./buttonLink"/>
                                    <id
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            fieldDescription="HTML ID attribute to apply to the component."
                                            fieldLabel="ID"
                                            name="./id"
                                            validation="html-unique-id-validator"/>
                                </items>
                            </configuration>
                        </items>
                    </properties>
                    <analytics
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Analytics &amp; Reporting"
                            sling:resourceType="granite/ui/components/foundation/include"
                            path="/apps/dhl/dialog-fragments/analytics/dialog"
                            namespace="analytics"/>
                    <styletab
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/include"
                            path="/mnt/overlay/cq/gui/components/authoring/dialog/style/tab_edit/styletab"/>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
