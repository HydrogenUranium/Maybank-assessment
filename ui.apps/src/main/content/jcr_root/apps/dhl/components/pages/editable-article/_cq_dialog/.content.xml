<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured">
    <content jcr:primaryType="nt:unstructured">
        <items jcr:primaryType="nt:unstructured">
            <tabs jcr:primaryType="nt:unstructured">
                <items jcr:primaryType="nt:unstructured" sling:hideChildren="permissions">
                    <dhl jcr:primaryType="nt:unstructured" jcr:title="DHL Properties" sling:resourceType="granite/ui/components/foundation/section">
                        <layout jcr:primaryType="nt:unstructured" sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns" margin="{Boolean}false"/>
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <dhlcommon
                                            jcr:primaryType="nt:unstructured"
                                            jcr:title="DHL Common Page Properties"
                                            cq:showOnCreate="{Boolean}false"
                                            sling:resourceType="granite/ui/components/foundation/form/fieldset">
                                        <items jcr:primaryType="nt:unstructured">
                                            <hideNavigationMenu
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                    fieldDescription="If checked the nav bar will be hidden."
                                                    text="Hide Navigation Menu"
                                                    value="true"
                                                    name="./hideNavigationMenu">
                                                <granite:data
                                                        jcr:primaryType="nt:unstructured"
                                                        cq-msm-lockable="./hideNavigationMenu"/>
                                            </hideNavigationMenu>
                                        </items>
                                    </dhlcommon>
                                    <dhl
                                        jcr:primaryType="nt:unstructured"
                                        jcr:title="DHL Article properties"
                                        sling:resourceType="granite/ui/components/foundation/form/fieldset">
                                        <items jcr:primaryType="nt:unstructured">
                                            <heroImages
                                                    jcr:primaryType="nt:unstructured"
                                                    jcr:title="Hero Images"
                                                    sling:resourceType="granite/ui/components/foundation/form/fieldset">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <note
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/alert"
                                                            text="The configuration for the Hero image has been moved to the Hero Image component. Please edit the component on the page if you want to override the Hero banner image."/>
                                                    <heroimagemob
                                                            jcr:primaryType="nt:unstructured"
                                                            disabled="{Boolean}true"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                            allowBulkEdit="{Boolean}true"
                                                            fieldLabel="⚠️ Article 'Hero' Image (mobile)"
                                                            name="./heroimagemob"
                                                            rootPath="/content/dam"
                                                            required="{Boolean}true"/>
                                                    <heroimagetab
                                                            jcr:primaryType="nt:unstructured"
                                                            disabled="{Boolean}true"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                            allowBulkEdit="{Boolean}true"
                                                            fieldLabel="⚠️ Article 'Hero' Image (tablet)"
                                                            name="./heroimagetab"
                                                            rootPath="/content/dam"
                                                            required="{Boolean}true"/>
                                                    <heroimagedt
                                                            jcr:primaryType="nt:unstructured"
                                                            disabled="{Boolean}true"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                            allowBulkEdit="{Boolean}true"
                                                            fieldLabel="⚠️ Article 'Hero' Image (desktop)"
                                                            name="./heroimagedt"
                                                            rootPath="/content/dam"
                                                            required="{Boolean}true"/>
                                                    <heroimageAltText
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                            fieldLabel="⚠️ Hero Image Alt Text"
                                                            disabled="{Boolean}true"
                                                            name="./heroimageAltText"
                                                            fieldDescription="Set Hero image alt text for SEO"
                                                            emptyText="Hero Image Alt Text Placeholder"/>
                                                </items>
                                            </heroImages>
                                            <description
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/textarea"
                                                allowBulkEdit="{Boolean}true"
                                                fieldLabel="Brief Description"
                                                name="./listbrief"
                                                required="{Boolean}true"/>
                                            <readtime
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                allowBulkEdit="{Boolean}true"
                                                fieldLabel="Read time"
                                                name="./readtime"
                                                required="{Boolean}false"/>
                                            <authorCF
                                                    jcr:primaryType="nt:unstructured"
                                                    jcr:title="Author"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <fragmentPath
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="dam/cfm/components/cfpicker"
                                                            emptyText="Enter or select Content Fragment"
                                                            granite:class="author-cf-input"
                                                            fieldDescription="Path to the Content Fragment to display."
                                                            cq:showOnCreate="{Boolean}true"
                                                            fieldLabel="Content Fragment"
                                                            name="./author-cf/fragmentPath"
                                                            pickerTitle="Select Content Fragment"
                                                            rootPath="/content/dam/dhl/content-fragments"/>
                                                    <type
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/hidden"
                                                            cq:showOnCreate="{Boolean}true"
                                                            name="./author-cf/sling:resourceType"
                                                            value="core/wcm/components/contentfragment/v1/contentfragment"/>
                                                    <variationName
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/hidden"
                                                            fieldDescription="Specify which variation to display"
                                                            cq:showOnCreate="{Boolean}true"
                                                            fieldLabel="Variation"
                                                            value="master"
                                                            name="./author-cf/variationName">
                                                    </variationName>

                                                    <note
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/alert"
                                                            jcr:title="⚠️ Author configuration has been moved to Content Fragments"
                                                            text="Legacy author configuration is no longer available. Please use the Content Fragment configuration above instead. ☝️"/>

                                                    <author
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                            allowBulkEdit="{Boolean}true"
                                                            disabled="{Boolean}true"
                                                            fieldLabel="⚠️ Author name (deprecated)"
                                                            name="./author"
                                                            required="{Boolean}false"/>
                                                    <authortitle
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                            allowBulkEdit="{Boolean}true"
                                                            disabled="{Boolean}true"
                                                            fieldLabel="⚠️ Author title (deprecated)"
                                                            name="./authortitle"
                                                            required="{Boolean}false"/>
                                                    <authorBriefDescription
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                                            disabled="{Boolean}true"
                                                            fieldLabel="⚠️ Brief description of the author (deprecated)"
                                                            fieldDescription="For Author Banner component"
                                                            name="./authorBriefDescription">
                                                    </authorBriefDescription>
                                                    <authorimage
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                            disabled="{Boolean}true"
                                                            allowBulkEdit="{Boolean}true"
                                                            fieldLabel="⚠️ Author image (deprecated)"
                                                            name="./authorimage"
                                                            rootPath="/content/dam"
                                                            required="{Boolean}false"/>
                                                </items>
                                            </authorCF>

                                            <mediatype
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/select"
                                                allowBulkEdit="{Boolean}true"
                                                fieldLabel="Media Category"
                                                name="./mediatype"
                                                required="{Boolean}true">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <article jcr:primaryType="nt:unstructured" text="article" value="article" />
                                                    <blog jcr:primaryType="nt:unstructured" text="blog post" value="blogPost" />
                                                    <video jcr:primaryType="nt:unstructured" text="video" value="video" />
                                                    <competition jcr:primaryType="nt:unstructured" text="competition" value="competition" />
                                                    <infographic jcr:primaryType="nt:unstructured" text="infographic" value="infographic" />
                                                    <download jcr:primaryType="nt:unstructured" text="download" value="download" />
                                                    <gallery jcr:primaryType="nt:unstructured" text="gallery" value="gallery" />
                                                    <interactive jcr:primaryType="nt:unstructured" text="interactive" value="interactive" />
                                                </items>
                                            </mediatype>
                                            <relatedarticles
                                                jcr:primaryType="nt:unstructured"
                                                name="./relatedarticles"
                                                fieldLabel="Related Articles"
                                                fieldDescription="Click + to add new item"
                                                composite="{Boolean}true"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/multifield">

                                                <field sling:resourceType="granite/ui/components/coral/foundation/container"
                                                    jcr:primaryType="nt:unstructured"
                                                    name="./items">
                                                    <items jcr:primaryType="nt:unstructured">
                                                        <url
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                            fieldLabel="Url"
                                                            name="./url"/>
                                                    </items>
                                                </field>
                                            </relatedarticles>

                                            <custompublishdate
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/datepicker"
                                                fieldLabel="'Custom' Publish Date"
                                                name="./custompublishdate"/>
                                        </items>
                                    </dhl>
                                    <dhlsocial
                                        jcr:primaryType="nt:unstructured"
                                        jcr:title="DHL Social/Sharing properties"
                                        cq:showOnCreate="{Boolean}false"
                                        sling:resourceType="granite/ui/components/foundation/form/fieldset">
                                        <items jcr:primaryType="nt:unstructured">
                                            <ogtagimage
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                allowBulkEdit="{Boolean}true"
                                                fieldLabel="OG Tag Image"
                                                name="./ogtagimage"
                                                rootPath="/content/dam"/>
                                        </items>
                                    </dhlsocial>
                                </items>
                            </column>
                        </items>
                    </dhl>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
