<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="Article Grid"
          sling:resourceType="cq/gui/components/authoring/dialog">
    <content
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/container">
        <layout
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
        <items jcr:primaryType="nt:unstructured">
            <tabs
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/tabs"
                    maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <properties
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Properties"
                            sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <tabSource
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                    fieldLabel="Tab Source"
                                    granite:class="cq-dialog-dropdown-showhide"
                                    name="./tabSource">
                                <granite:data
                                        jcr:primaryType="nt:unstructured"
                                        cq-dialog-dropdown-showhide-target=".display-mode-section-showhide"/>
                                <items
                                        jcr:primaryType="nt:unstructured">
                                    <childCategories
                                            jcr:primaryType="nt:unstructured"
                                            text="Child Categories"
                                            value="childCategories"/>
                                    <customByTags
                                            jcr:primaryType="nt:unstructured"
                                            text="Tags"
                                            value="customByTags"/>
                                </items>
                            </tabSource>
                            <tagsOptions
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/container"
                                    granite:class="display-mode-section-showhide">
                                <granite:data
                                        jcr:primaryType="nt:unstructured"
                                        showhidetargetvalue="customByTags"/>
                                <items jcr:primaryType="nt:unstructured">
                                    <title
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            fieldLabel="Custom Title"
                                            name="./title"/>
                                    <contentSource
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                            fieldLabel="Content Root Path"
                                            required="true"
                                            rootPath="/content/dhl"
                                            name="./contentSource"/>
                                    <includeAllTab
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                            fieldDescription="Enable this option to add a tab that displays all articles from all categories."
                                            text="Include Autogenerated 'All' Tab"
                                            value="true"
                                            name="./includeAutogeneratedAllTab"/>
                                    <tabs
                                            jcr:primaryType="nt:unstructured"
                                            fieldLabel="Tabs"
                                            composite="{Boolean}true"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/multifield">
                                        <field sling:resourceType="granite/ui/components/coral/foundation/container"
                                               jcr:primaryType="nt:unstructured"
                                               name="./tabs">
                                            <items jcr:primaryType="nt:unstructured">
                                                <title
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                        fieldLabel="Tab Title"
                                                        name="./title"/>
                                                <tags
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="cq/gui/components/coral/common/form/tagfield"
                                                        fieldLabel="Include Articles by Tags"
                                                        fieldDescription="Select a tag to filter articles displayed under this tab."
                                                        multiple="{Boolean}true"
                                                        name="./tags"/>
                                            </items>
                                        </field>
                                    </tabs>
                                </items>
                            </tagsOptions>
                        </items>
                    </properties>
                    <styletab
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/include"
                            path="/mnt/overlay/cq/gui/components/authoring/dialog/style/tab_edit/styletab"/>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>