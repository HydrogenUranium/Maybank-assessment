<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Properties"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
        <items jcr:primaryType="nt:unstructured">
            <column
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <hidelatest
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/form/checkbox"
                        allowBulkEdit="{Boolean}true"
                        name="./hidelatest"
                        text="Hide 'Latest' article group"
                        value="true"/>
                    <hidetrending
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/form/checkbox"
                        allowBulkEdit="{Boolean}true"
                        name="./hidetrending"
                        text="Hide 'Trending' article group"
                        value="true"/>

                    <ctacopy
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                            name="./applyForAccountCta"
                            fieldDescription="Text of the CTA link that appears in ArticleGrid"
                            fieldLabel="CTA link copy (text)"
                            required="false"  />

                    <ctatarget
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                            fieldLabel="CTA link target"
                            name="./applyForAccountUrl"
                            rootPath="/content/dhl" />

                    <category0
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                        fieldLabel="Category (1)"
                        rootPath="/content/dhl"
                        name="./category0"
                        />
                    <category1
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                        fieldLabel="Category (2)"
                        rootPath="/content/dhl"
                        name="./category1"
                        />
                    <category2
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                        fieldLabel="Category (3)"
                        rootPath="/content/dhl"
                        name="./category2"
                        />
                    <category3
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                        fieldLabel="Category (4)"
                        rootPath="/content/dhl"
                        name="./category3"
                        />

                    <trending
                        jcr:primaryType="nt:unstructured"
                        name="./trending"
                        fieldLabel="Trending Article List"
                        fieldDescription="Click + to add new item"
                        composite="{Boolean}true"
                        sling:resourceType="granite/ui/components/coral/foundation/form/multifield">

                        <field sling:resourceType="granite/ui/components/coral/foundation/container"
                            jcr:primaryType="nt:unstructured"
                            name="./items">

                            <items jcr:primaryType="nt:unstructured">
                                <path
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                    fieldLabel="Page"
                                    rootPath="/content/dhl"
                                    name="./path"
                                    />
                            </items>
                        </field>
                    </trending>
                </items>
            </column>
        </items>
    </content>
</jcr:root>
