<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
        xmlns:granite="http://www.adobe.com/jcr/granite/1.0"
        xmlns:cq="http://www.day.com/jcr/cq/1.0"
        xmlns:jcr="http://www.jcp.org/jcr/1.0"
        xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
        jcr:primaryType="nt:unstructured"
        jcr:title="Article Header"
        sling:resourceType="cq/gui/components/authoring/dialog">
    <content
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/container">
        <layout
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
        <items jcr:primaryType="nt:unstructured">
            <column
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <author
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Author"
                            sling:resourceType="granite/ui/components/foundation/form/fieldset">
                        <items jcr:primaryType="nt:unstructured">
                            <note
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/alert"
                                    text="The Author-related part will be finalised as part of DIS-372.
                                          Currently, the author information (e.g. author name, author title and author image)
                                          from the 'DHL Properties' tab in Page Properties is used as a temporary solution."/>
                        </items>
                    </author>
                    <article
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Article"
                            sling:resourceType="granite/ui/components/foundation/form/fieldset">
                        <items jcr:primaryType="nt:unstructured">
                            <articleTitle
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/form/textfield"
                                    fieldLabel="Article Title"
                                    name="./articleTitle"/>
                            <publishDate
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/form/textfield"
                                    fieldLabel="Publish Date"
                                    name="./publishDate"/>
                            <readingDuration
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/form/textfield"
                                    fieldLabel="Reading Duration"
                                    name="./readingDuration"/>
                        </items>
                    </article>
                    <shareIcons
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Share icons"
                            sling:resourceType="granite/ui/components/foundation/form/fieldset">
                        <items jcr:primaryType="nt:unstructured">
                            <shareOn
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/form/textfield"
                                    fieldLabel="Label (Desktop only)"
                                    emptyText="Share on"
                                    name="./shareOn"/>
                            <socialNetwork
                                    jcr:primaryType="nt:unstructured"
                                    fieldLabel="Social Network Icons"
                                    fieldDescription="Add icons for the list of social networks to be displayed on the left side"
                                    composite="{Boolean}true"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/multifield">
                                <field sling:resourceType="granite/ui/components/coral/foundation/container"
                                        jcr:primaryType="nt:unstructured"
                                        name="./socialNetwork">
                                    <items jcr:primaryType="nt:unstructured">
                                        <socialNetworkName
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                fieldLabel="Social Network"
                                                fieldDescription="Select a social network and set the appropriate icon for it"
                                                name="./socialNetworkName">
                                            <items jcr:primaryType="nt:unstructured">
                                                <facebook
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Facebook"
                                                        value="facebook"/>
                                                <twitter
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Twitter"
                                                        value="twitter"/>
                                                <linkedin
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Linkedin"
                                                        value="linkedin"/>
                                            </items>
                                        </socialNetworkName>
                                        <socialNetworkIcon
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                fieldLabel="Social Network Icon Path"
                                                rootPath="/content/dam"
                                                name="./socialNetworkIconPath"/>
                                    </items>
                                </field>
                            </socialNetwork>
                            <smartShareButtonsLabel
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/form/textfield"
                                    fieldLabel="'Smart Share Buttons' label"
                                    fieldDescription="Add label for the 'Smart Share Buttons' icon to be displayed on the right side.
                                                      This 'Smart Share Buttons' to help refer social channels
                                                      that visitors will most likely engage with based on visitor characteristics"
                                    emptyText="Share"
                                    name="./smartShareButtonsLabel"/>
                            <smartShareButtonsIcon
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                    fieldLabel="'Smart Share Buttons' Icon"
                                    fieldDescription="Add label for the 'Smart Share Buttons' icon to be displayed on the right side.
                                                      This 'Smart Share Buttons' to help refer social channels
                                                      that visitors will most likely engage with based on visitor characteristics"
                                    rootPath="/content/dam"
                                    name="./smartShareButtonsIconPath"/>
                        </items>
                    </shareIcons>
                </items>
            </column>
        </items>
    </content>
</jcr:root>
