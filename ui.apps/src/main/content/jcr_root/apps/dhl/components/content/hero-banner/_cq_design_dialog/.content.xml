<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Hero Banner"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <sizes
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Title"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <inheritImage
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                            fieldDescription="If selected then the image will be taken from the page properties, otherwise there will be custom fields"
                                            name="./inheritImage"
                                            text="Inherit image from page properties"
                                            value="true"
                                            uncheckedValue="false"/>
                                    <keyTakeaways
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                            fieldDescription="If this checkbox is checked, the component will have fields for setting key takeaways."
                                            name="./keyTakeaways"
                                            text="Add key takeaways feature"
                                            value="true"
                                            uncheckedValue="false"/>
                                    <roundedCorners
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                            name="./roundedCorners"
                                            text="Rounded corners"
                                            value="true"
                                            uncheckedValue="false"/>
                                    <margin
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                            name="./margin"
                                            text="Add margins"
                                            value="true"
                                            uncheckedValue="false"/>
                                    <enableAssetDelivery
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                            fieldDescription="When checked, WebOptimized Image Delivery are enabled."
                                            name="./enableAssetDelivery"
                                            text="Enable Web Optimized Images"
                                            uncheckedValue="false"
                                            value="{Boolean}true"/>
                                </items>
                            </column>
                        </items>
                    </sizes>
                </items>
                <styletab
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/include"
                        path="/mnt/overlay/cq/gui/components/authoring/dialog/style/tab_design/styletab"/>
            </tabs>
        </items>
    </content>
</jcr:root>
