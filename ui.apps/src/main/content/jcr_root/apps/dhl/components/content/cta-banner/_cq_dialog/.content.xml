<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0"
          xmlns:granite="http://www.adobe.com/jcr/granite/1.0"
          xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="CTA Banner - Properties"
          sling:resourceType="cq/gui/components/authoring/dialog">
    <content
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/container">
        <layout
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
        <items jcr:primaryType="nt:unstructured">
            <column
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <type
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/select"
                            fieldLabel="Type (Source of configuration)"
                            fieldDescription="In this selector you can choose the source of configuration.
                                    Select 'Custom Configuration' for a unique, personalized setup.
                                     Or you can choose one of pre-made settings (configured in home page properties)"
                            granite:class="cq-dialog-dropdown-showhide cq-dialog-dropdown-reset-linked-checkbox"
                            name="./type">
                        <granite:data
                                jcr:primaryType="nt:unstructured"
                                cq-dialog-dropdown-showhide-target=".cta-banner-type-checkbox-showhide"/>
                        <items
                                jcr:primaryType="nt:unstructured">
                            <custom
                                    jcr:primaryType="nt:unstructured"
                                    text="Custom Configuration"
                                    value="custom"/>
                            <subscribeNewsletter
                                    jcr:primaryType="nt:unstructured"
                                    text="Subscribe To Our Newsletter (Home Page Configuration for article)"
                                    value="subscribeNewsletter"/>
                        </items>
                    </type>
                    <configuration
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/container"
                            granite:class="cta-banner-type-checkbox-showhide">
                        <granite:data
                                jcr:primaryType="nt:unstructured"
                                showhidetargetvalue="custom"/>
                        <items jcr:primaryType="nt:unstructured">
                            <mobileBackgroundImage
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                    name="./mobileBackgroundImage"
                                    rootPath="/content/dam"
                                    fieldLabel="Mobile Background Image"/>
                            <tabletBackgroundImage
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                    name="./tabletBackgroundImage"
                                    rootPath="/content/dam"
                                    fieldLabel="Tablet Background Image"/>
                            <desktopBackgroundImage
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                    name="./desktopBackgroundImage"
                                    rootPath="/content/dam"
                                    fieldLabel="Desktop Background Image"/>
                            <topTitle
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldLabel="Top Title"
                                    emptyText="Stay In The Loop!"
                                    name="./topTitle"/>
                            <title
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldLabel="Title"
                                    emptyText="Subscribe To Our Newsletter And Be The First To Receive Exclusive Updates, Exciting Offers, And Insider Insights"
                                    name="./title"/>
                            <buttonName
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldLabel="Button Name"
                                    emptyText="Subscribe"
                                    name="./buttonName"/>
                            <buttonLink
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                    fieldLabel="Button Link"
                                    rootPath="/content/dhl"
                                    name="./buttonLink"/>
                        </items>
                    </configuration>
                </items>
            </column>
        </items>
    </content>
</jcr:root>
