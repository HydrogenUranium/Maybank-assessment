<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0"
          xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          xmlns:granite="http://www.adobe.com/jcr/granite/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="Article Container"
          sling:resourceType="cq/gui/components/authoring/dialog">
    <content
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/container">
        <layout
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
        <items jcr:primaryType="nt:unstructured">
            <column
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <columns
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/select"
                            fieldLabel="Number of columns"
                            name="./columns">
                        <items
                                jcr:primaryType="nt:unstructured">
                            <one
                                    jcr:primaryType="nt:unstructured"
                                    text="One"
                                    value="one-column"/>
                            <two
                                    jcr:primaryType="nt:unstructured"
                                    text="Two"
                                    value="two-columns"/>
                        </items>
                    </columns>
                    <width
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/select"
                            fieldLabel="Max Width"
                            name="./width">
                        <items
                                jcr:primaryType="nt:unstructured">
                            <medium
                                    jcr:primaryType="nt:unstructured"
                                    text="Medium (1200px)"
                                    value="medium"/>
                            <large
                                    jcr:primaryType="nt:unstructured"
                                    text="Large (1340px)"
                                    value="large"/>
                        </items>
                    </width>
                    <removeFirstChildTopMargin
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/form/checkbox"
                            name="./removeFirstChildTopMargin"
                            text="Remove top margin for first child in each column (use it to align components)"
                            value="true"/>
                    <topMargin
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/form/checkbox"
                            name="./topMargin"
                            text="Add a top margin to the container"
                            value="true"/>
                </items>
            </column>
        </items>
    </content>
</jcr:root>
